# frozen_string_literal: true

##
# .env.example
#
# Example environment variables for Clay Companion development.
# Copy this file to .env and update with your values.
#
# Usage:
#   cp .env.example .env

# ============================================================================
# Database Configuration
# ============================================================================

# PostgreSQL connection string for development
# Format: postgres://username:password@host:port/database
DATABASE_URL=postgres://clay_companion:development_password@db:5432/clay_companion_development

# PostgreSQL connection string for test environment
TEST_DATABASE_URL=postgres://clay_companion:development_password@db:5432/clay_companion_test

# ============================================================================
# Redis Configuration
# ============================================================================

# Redis connection string (for future Sidekiq background jobs)
# Format: redis://host:port/database_number
REDIS_URL=redis://redis:6379/0

# ============================================================================
# Rails Configuration
# ============================================================================

# Rails environment (development, test, production)
RAILS_ENV=development

# Rails master key (generated by Rails, used for credentials encryption)
# Uncomment and set after running: rails credentials:edit
# RAILS_MASTER_KEY=your_master_key_here

# Rails logs to stdout (useful for Docker)
RAILS_LOG_TO_STDOUT=true

# ============================================================================
# Application Configuration
# ============================================================================

# Application host (used for URL generation)
# APP_HOST=localhost:3000

# ============================================================================
# Email Configuration (Future)
# ============================================================================

# SMTP settings for sending emails
# SMTP_ADDRESS=smtp.gmail.com
# SMTP_PORT=587
# SMTP_DOMAIN=example.com
# SMTP_USERNAME=your_email@example.com
# SMTP_PASSWORD=your_password

# ============================================================================
# File Storage Configuration (Future - Production)
# ============================================================================

# Google Cloud Storage credentials (for production)
# GCS_PROJECT=your-gcp-project-id
# GCS_BUCKET=clay-companion-production
# GCS_CREDENTIALS=path/to/credentials.json

# ============================================================================
# External Services (Future)
# ============================================================================

# Sentry error tracking (production)
# SENTRY_DSN=your_sentry_dsn_here

# ============================================================================
# Development Tools
# ============================================================================

# Disable Spring (recommended for Docker)
DISABLE_SPRING=true

# Enable Bullet gem for N+1 query detection
# BULLET_ENABLED=true
