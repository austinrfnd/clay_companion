<%#
  Password Reset Request View
  URL: /password/reset
  
  Displays the password reset request form for artists to request password reset emails.
  Matches wireframe specifications from requirements/wireframes/auth/password-reset.md
  
  Features:
  - Email input
  - Submit button
  - Sign in link
  - Error message display
%>

<div class="auth-page-container">
  <div class="auth-form-container">
    <div class="auth-form-header">
      <h1 class="auth-form-title">Reset Your Password</h1>
      <p class="auth-form-subtitle">Enter your email and we'll send you reset instructions</p>
    </div>

    <%= form_for(resource, as: resource_name, url: password_reset_request_path, html: { method: :post, class: "auth-form" }) do |f| %>
      <div class="auth-form-field">
        <%= f.label :email, "Email Address", class: "auth-form-label" %>
        <%= f.email_field :email, 
            autofocus: true, 
            autocomplete: "email",
            placeholder: "artist@example.com",
            value: params.dig(:artist, :email),
            class: "auth-form-input",
            aria: { required: true } %>
        <% if resource.errors[:email].any? %>
          <%= error_message(resource.errors[:email].first, field_id: 'email') %>
        <% end %>
      </div>

      <div class="auth-form-actions">
        <%= f.submit "Send Reset Instructions", class: "auth-form-submit" %>
      </div>
    <% end %>

    <div class="auth-form-divider"></div>

    <div class="auth-form-footer">
      <p class="auth-form-footer-text">
        Remember your password?
        <%= link_to "Sign in", new_artist_session_path, class: "auth-form-footer-link" %>
      </p>
    </div>
  </div>
</div>
