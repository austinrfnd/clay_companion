<%#
  Password Reset Email Template
  Purpose: Provide password reset link to artists who requested password change
  
  Matches wireframe specifications from:
  requirements/wireframes/auth/email-password-reset.md
  
  Features:
  - Branded HTML email with design system colors
  - Ceramic C logo in header
  - Styled call-to-action button
  - Security-focused messaging
  - Table-based layout for email client compatibility
  - Inline CSS (no external stylesheets)
  - Mobile responsive
  - WCAG AA compliant
%>
<!--[if mso]>
<style type="text/css">
  body, table, td {font-family: Arial, Helvetica, sans-serif !important;}
</style>
<![endif]-->
<div style="margin: 0; padding: 0; background-color: #F8FAF9; font-family: 'Inter', Arial, Helvetica, sans-serif;">
  <!-- Wrapper Table -->
  <table role="presentation" cellspacing="0" cellpadding="0" border="0" width="100%" style="background-color: #F8FAF9;">
    <tr>
      <td align="center" style="padding: 40px 16px;">
        <!-- Main Container Table -->
        <table role="presentation" cellspacing="0" cellpadding="0" border="0" width="600" style="max-width: 600px; background-color: #FFFFFF; border-radius: 4px; overflow: hidden;">
          
          <!-- Header -->
          <tr>
            <td style="background-color: #FFFFFF; padding: 24px 32px; border-bottom: 1px solid rgba(168, 196, 181, 0.3);">
              <table role="presentation" cellspacing="0" cellpadding="0" border="0" width="100%">
                <tr>
                  <td width="32" style="vertical-align: middle;">
                    <%= link_to root_url, style: "text-decoration: none; display: inline-block;" do %>
                      <img src="<%= root_url %>clay_companion_logo.png" alt="Clay Companion" width="32" height="32" style="display: block; border: 0; vertical-align: middle;" />
                    <% end %>
                  </td>
                  <td align="left" valign="middle" style="padding-left: 12px;">
                    <%= link_to root_url, style: "text-decoration: none; color: #1F2421; font-family: 'Inter', Arial, Helvetica, sans-serif; font-size: 20px; font-weight: 600; line-height: 1.2;" do %>
                      Clay Companion
                    <% end %>
                  </td>
                </tr>
              </table>
            </td>
          </tr>
          
          <!-- Body Content -->
          <tr>
            <td style="padding: 32px; background-color: #FFFFFF;">
              
              <!-- Heading -->
              <h1 style="margin: 0 0 16px 0; padding: 0; font-family: 'Inter', Arial, Helvetica, sans-serif; font-size: 24px; font-weight: 600; line-height: 1.3; color: #1F2421;">
                Reset Your Password
              </h1>
              
              <!-- Greeting -->
              <p style="margin: 0 0 16px 0; padding: 0; font-family: 'Inter', Arial, Helvetica, sans-serif; font-size: 16px; line-height: 1.6; color: #1F2421;">
                Hello <%= @resource.email %>,
              </p>
              
              <!-- Main Message -->
              <p style="margin: 0 0 32px 0; padding: 0; font-family: 'Inter', Arial, Helvetica, sans-serif; font-size: 16px; line-height: 1.6; color: #1F2421;">
                Someone has requested a link to change your password. You can do this through the link below.
              </p>
              
              <!-- CTA Button -->
              <table role="presentation" cellspacing="0" cellpadding="0" border="0" width="100%" style="margin: 32px 0;">
                <tr>
                  <td align="center" style="padding: 0;">
                    <%= link_to edit_password_url(@resource, reset_password_token: @token), style: "display: inline-block; background-color: #527563; color: #FFFFFF; text-decoration: none; font-family: 'Inter', Arial, Helvetica, sans-serif; font-size: 16px; font-weight: 600; padding: 12px 24px; border-radius: 8px; text-align: center; min-width: 200px;" do %>
                      Change my password
                    <% end %>
                  </td>
                </tr>
              </table>
              
              <!-- Alternative Link Text -->
              <p style="margin: 24px 0 8px 0; padding: 0; font-family: 'Inter', Arial, Helvetica, sans-serif; font-size: 14px; line-height: 1.5; color: #5C6C62;">
                Or copy and paste this link into your browser:
              </p>
              
              <!-- Reset URL -->
              <p style="margin: 0 0 24px 0; padding: 0; font-family: 'Inter', Arial, Helvetica, sans-serif; font-size: 14px; line-height: 1.5; color: #6E9180; word-break: break-all;">
                <%= link_to edit_password_url(@resource, reset_password_token: @token), edit_password_url(@resource, reset_password_token: @token), style: "color: #6E9180; text-decoration: underline;" %>
              </p>
              
              <!-- Expiry Notice -->
              <p style="margin: 0 0 24px 0; padding: 0; font-family: 'Inter', Arial, Helvetica, sans-serif; font-size: 14px; line-height: 1.5; color: #5C6C62;">
                This link will expire in 6 hours.
              </p>
              
              <!-- Security Notice -->
              <p style="margin: 0 0 8px 0; padding: 0; font-family: 'Inter', Arial, Helvetica, sans-serif; font-size: 14px; line-height: 1.5; color: #5C6C62;">
                If you didn't request this, please ignore this email.
              </p>
              
              <!-- Additional Security Notice -->
              <p style="margin: 8px 0 0 0; padding: 0; font-family: 'Inter', Arial, Helvetica, sans-serif; font-size: 14px; line-height: 1.5; color: #5C6C62;">
                Your password won't change until you access the link above and create a new one.
              </p>
              
            </td>
          </tr>
          
          <!-- Footer -->
          <tr>
            <td style="background-color: #F8FAF9; padding: 24px 32px; border-top: 1px solid rgba(168, 196, 181, 0.3); text-align: center;">
              <p style="margin: 0 0 16px 0; padding: 0; font-family: 'Inter', Arial, Helvetica, sans-serif; font-size: 14px; line-height: 1.5; color: #5C6C62;">
                Need help? Contact us at <%= mail_to 'support@claycompanion.com', 'support@claycompanion.com', style: "color: #6E9180; text-decoration: underline;" %>
              </p>
              <p style="margin: 0; padding: 0; font-family: 'Inter', Arial, Helvetica, sans-serif; font-size: 12px; line-height: 1.4; color: #5C6C62;">
                Â© <%= Date.current.year %> Clay Companion. All rights reserved.
              </p>
            </td>
          </tr>
          
        </table>
      </td>
    </tr>
  </table>
</div>
