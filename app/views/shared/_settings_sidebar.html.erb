<%#
  Settings Sidebar Partial
  Persistent sidebar navigation for all settings pages.
  
  Parameters:
  - current_page: Symbol or String indicating the current page (:account, :privacy, :profile, :studio, :work)
  
  Usage:
  render 'shared/settings_sidebar', current_page: :account
%>

<div class="w-60 bg-white border-r border-pale-celadon flex-shrink-0">
  <!-- Sidebar Header -->
  <div class="px-6 py-4 border-b border-pale-celadon/30">
    <h3 class="text-sm font-semibold text-charcoal uppercase tracking-wider">Settings</h3>
  </div>
  
  <nav class="py-2">
    <!-- Account & Security Section -->
    <div class="px-6 py-2 mt-2">
      <h4 class="text-xs font-semibold text-slate uppercase tracking-wider">Account & Security</h4>
    </div>
    
    <!-- Account -->
    <% is_account = current_page == :account || current_page == 'account' %>
    <%= link_to dashboard_settings_account_path, 
        class: "flex items-center gap-3 h-11 px-6 my-0.5 #{'bg-mist border-l-4 border-celadon text-charcoal font-semibold' if is_account} #{'text-slate hover:bg-mist/70 font-medium' unless is_account} text-sm transition-all duration-150 focus:outline-none focus:ring-2 focus:ring-celadon focus:ring-offset-2",
        aria: { current: (is_account ? 'page' : nil) } do %>
      <svg class="w-5 h-5 <%= is_account ? 'text-celadon' : '' %> flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
      </svg>
      <span>Account</span>
    <% end %>
    
    <!-- Privacy -->
    <% is_privacy = current_page == :privacy || current_page == 'privacy' %>
    <%= link_to "#", 
        class: "flex items-center gap-3 h-11 px-6 my-0.5 #{'bg-mist border-l-4 border-celadon text-charcoal font-semibold' if is_privacy} #{'text-slate hover:bg-mist/70 font-medium' unless is_privacy} text-sm transition-all duration-150 focus:outline-none focus:ring-2 focus:ring-celadon focus:ring-offset-2",
        aria: { current: (is_privacy ? 'page' : nil) } do %>
      <svg class="w-5 h-5 <%= is_privacy ? 'text-celadon' : '' %> flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
      </svg>
      <span>Privacy</span>
    <% end %>
    
    <!-- Divider -->
    <div class="h-px bg-pale-celadon/30 mx-6 my-2"></div>
    
    <!-- Content & Portfolio Section -->
    <div class="px-6 py-2">
      <h4 class="text-xs font-semibold text-slate uppercase tracking-wider">Content & Portfolio</h4>
    </div>
    
    <!-- Profile -->
    <% is_profile = current_page == :profile || current_page == 'profile' %>
    <%= link_to dashboard_settings_profile_path, 
        class: "flex items-center gap-3 h-11 px-6 my-0.5 #{'bg-mist border-l-4 border-celadon text-charcoal font-semibold' if is_profile} #{'text-slate hover:bg-mist/70 font-medium' unless is_profile} text-sm transition-all duration-150 focus:outline-none focus:ring-2 focus:ring-celadon focus:ring-offset-2",
        aria: { current: (is_profile ? 'page' : nil) } do %>
      <svg class="w-5 h-5 <%= is_profile ? 'text-celadon' : '' %> flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
      </svg>
      <span>Profile</span>
    <% end %>
    
    <!-- My Studio -->
    <% is_studio = current_page == :studio || current_page == 'studio' %>
    <%= link_to "#", 
        class: "flex items-center gap-3 h-11 px-6 my-0.5 #{'bg-mist border-l-4 border-celadon text-charcoal font-semibold' if is_studio} #{'text-slate hover:bg-mist/70 font-medium' unless is_studio} text-sm transition-all duration-150 focus:outline-none focus:ring-2 focus:ring-celadon focus:ring-offset-2",
        aria: { current: (is_studio ? 'page' : nil) } do %>
      <svg class="w-5 h-5 <%= is_studio ? 'text-celadon' : '' %> flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
      </svg>
      <span>My Studio</span>
    <% end %>
    
    <!-- My Work -->
    <% is_work = current_page == :work || current_page == 'work' %>
    <%= link_to "#", 
        class: "flex items-center gap-3 h-11 px-6 my-0.5 #{'bg-mist border-l-4 border-celadon text-charcoal font-semibold' if is_work} #{'text-slate hover:bg-mist/70 font-medium' unless is_work} text-sm transition-all duration-150 focus:outline-none focus:ring-2 focus:ring-celadon focus:ring-offset-2",
        aria: { current: (is_work ? 'page' : nil) } do %>
      <svg class="w-5 h-5 <%= is_work ? 'text-celadon' : '' %> flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
      </svg>
      <span>My Work</span>
    <% end %>
  </nav>
</div>

