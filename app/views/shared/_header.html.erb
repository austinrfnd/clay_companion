<%#
  Platform Header Partial
  
  Displays the Clay Companion logo and navigation links.
  Used across all pages (auth and dashboard).
  
  Specifications:
  - Background: White (#FFFFFF)
  - Border: 1px solid rgba(168, 196, 181, 0.3) on bottom
  - Padding: 16px vertical, 24px horizontal
  - Max Width: 1440px, centered
  - Logo: "Clay Companion", Inter 20px Semibold, Charcoal color
  - Links: Sign Up/Login (unauthenticated) or Dashboard (authenticated)
%>
<header class="platform-header" role="banner">
  <div class="platform-header-container">
    <div class="platform-header-content">
      <%= link_to root_path, class: "platform-logo", aria: { label: "Clay Companion Homepage" } do %>
        <span class="platform-logo-text">Clay Companion</span>
      <% end %>

      <nav class="platform-header-nav" role="navigation" aria-label="Main navigation">
        <% if artist_signed_in? %>
          <%= link_to "Dashboard", dashboard_path, class: "platform-header-link" %>
          <%= link_to "Sign Out", destroy_artist_session_path, data: { turbo_method: :delete }, class: "platform-header-link" %>
        <% else %>
          <%= link_to "Sign Up", new_artist_registration_path, class: "platform-header-link" %>
          <%= link_to "Login", new_artist_session_path, class: "platform-header-link" %>
        <% end %>
      </nav>
    </div>
  </div>
</header>

